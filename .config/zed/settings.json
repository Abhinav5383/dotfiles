{
    "show_edit_predictions": false,
    "features": {
        "edit_prediction_provider": null
    },
    "base_keymap": "VSCode",
    "hard_tabs": false,
    "theme": "Monospace dark",
    "icon_theme": "Material Icon Theme",
    "ui_font_family": "Noto Sans",
    "ui_font_size": 18,
    "buffer_font_family": "Monaspace Neon NF",
    "buffer_font_size": 18,
    "buffer_line_height": {
        "custom": 1.37
    },
    "buffer_font_features": {
        "calt": true,
        "ss01": true,
        "ss02": true,
        "ss03": true,
        "ss04": true,
        "ss05": true,
        "ss06": true,
        "ss07": true,
        "ss08": true,
        "ss09": true,
        "liga": true
    },
    "terminal": {
        "font_size": 18,
        "font_family": "Monaspace Neon NF",
        "line_height": {
            "custom": 1.4
        }
    },
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "toolbar": {
        "agent_review": false,
        "breadcrumbs": false,
        "quick_actions": false,
        "selections_menu": false
    },
    "tab_bar": {
        "show_nav_history_buttons": false
    },
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    "minimap": {
        "show": "never"
    },
    "tab_size": 4,
    "git": {
        "inline_blame": {
            "enabled": false
        }
    },

    "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
    },

    "languages": {
        "HTML": {
            "language_servers": [
                "vscode-html-language-server",
                "emmet-language-server",
                "biome"
            ]
        },
        "JavaScript": {
            "formatter": { "language_server": { "name": "biome" } },
            "language_servers": ["vtsls", "biome"]
        },
        "TypeScript": {
            "formatter": { "language_server": { "name": "biome" } },
            "language_servers": ["vtsls", "biome"]
        },
        "TSX": {
            "formatter": { "language_server": { "name": "biome" } },
            "language_servers": [
                "vtsls",
                "tailwindcss-language-server",
                "emmet-language-server",
                "biome"
            ]
        },
        "CSS": {
            "formatter": { "language_server": { "name": "biome" } },
            "language_servers": [
                "vscode-css-language-server",
                "tailwindcss-language-server",
                "emmet-language-server",
                "biome"
            ]
        },
        "JSON": {
            "language_servers": ["json-language-server", "biome"]
        }
    },

    "lsp": {
        "biome": {
            "binary": {
                "path": "/usr/bin/biome",
                "arguments": ["lsp-proxy"]
            }
        }
    }
}
