{
	"icon_theme": "Material Icon Theme",
	"telemetry": {
		"metrics": false,
		"diagnostics": false
	},
	"vim_mode": false,
	"theme": "Monospace dark",
	"base_keymap": "VSCode",
	"buffer_font_family": "JetBrainsMono Nerd Font",
	"buffer_font_size": 17,
	"buffer_font_weight": 400,
	"ui_font_family": "Cantarell",
	"ui_font_size": 17,
	"ui_font_weight": 400,
	"tab_size": 4,
	"remove_trailing_whitespace_on_save": true,
	"format_on_save": "on",
	"terminal": {
		"font_family": "CaskaydiaCove Nerd Font",
		"cursor_shape": "bar",
		"toolbar": {
			"breadcrumbs": false
		},
		"line_height": "standard"
	},
	"language_servers": ["biome", "..."],
	"formatter": {
		"language_server": {
			"name": "biome"
		}
	},
	"languages": {
		"HTML": {
			"formatter": "language_server"
		},
		"JavaScript": {
			"formatter": "language_server"
		},
		"TypeScript": {
			"formatter": "language_server"
		},
		"TSX": {
			"formatter": "language_server"
		},
		"CSS": {
			"formatter": "auto"
		},
		"JSON": {
			"formatter": "language_server"
		}
	},
	"code_actions_on_format": {
		"source.fixAll": true,
		"source.organizeImports": true
	},
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"toolbar": {
		"agent_review": false,
		"breadcrumbs": false,
		"quick_actions": false,
		"selections_menu": false
	},

	// Extensions

	// Disable all the AI nonsense

	"features": {
		"copilot": false
	},
	"agent": {
		"default_model": {
			"provider": "copilot_chat",
			"model": "gpt-4o"
		},
		"enabled": false,
		"version": "2",
		"button": false
	},
	"show_edit_predictions": false,
	"edit_predictions": {
		"disabled_globs": ["*"]
	},
	"chat_panel": {
		"button": "never"
	},
	"collaboration_panel": {
		"button": false
	}
}
