{
	"telemetry": {
		"metrics": false
	},
	"vim_mode": false,
	"theme": "Monospace dark",
	"base_keymap": "VSCode",
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"buffer_font_family": "JetBrainsMono Nerd Font Mono",
	"ui_font_family": "JetBrainsMono Nerd Font Mono",
	"tab_size": 4,
	"remove_trailing_whitespace_on_save": true,
	"format_on_save": "on",

	"terminal": {
		"font_family": "JetBrainsMono Nerd Font Mono"
	},

	"lsp": {
		"biome": {
			"settings": {
				"config_path": "./biome.json"
			}
		}
	},

	"formatter": {
		"external": {
			"command": "biome",
			"arguments": ["format", "--write", "--stdin-file-path={buffer_path}"]
		}
	},

	"features": {
		"copilot": false
	},

	"assistant": {
		"enabled": false,
		"version": "1",
		"button": false
	},
	"chat_panel": {
		"button": false
	},
	"collaboration_panel": {
		"button": false
	}
}
