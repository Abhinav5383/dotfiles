{
    "workbench.iconTheme": "material-icon-theme",
    "editor.linkedEditing": true,
    "editor.fontFamily": "'JetBrainsMono Nerd Font Mono', 'FiraCode Nerd Font', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font Mono', 'FiraCode Nerd Font', Consolas, 'Courier New', monospace",
    "git.autofetch": true,
    "editor.indentSize": "tabSize",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.mouseWheelZoom": true,
    "editor.formatOnSave": true,
    "editor.minimap.renderCharacters": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.indentSize": "tabSize",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.indentSize": "tabSize",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.indentSize": "tabSize",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.indentSize": "tabSize",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "explorer.compactFolders": false,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "diffEditor.ignoreTrimWhitespace": false,
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.mouseWheelZoom": true,
    "editor.stickyScroll.enabled": false,
    "workbench.colorTheme": "Monospace IDX Dark",
    "editor.useTabStops": false,
    "window.titleBarStyle": "custom",
    "editor.fontSize": 16,
    "terminal.external.linuxExec": "kgx",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        },
        "sh": {
            "path": "/bin/sh"
        }
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.cursorSmoothCaretAnimation": "on",
    "terminal.integrated.cursorStyle": "line",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "terminal.integrated.fontSize": 16,
    "prisma.showPrismaDataPlatformNotification": false,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.localEchoExcludePrograms": [
        "hx"
    ],
    "material-icon-theme.languages.associations": {
        "css": "tailwindCSS"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
}